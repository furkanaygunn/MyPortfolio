@using aygunmedia.Models.Siniflar
@model List<Skill>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Skill</title>
    <style>
        /* Skill Sayfası için Stiller */
        .skills-container {
            z-index: 9;
            width: 45%;
            min-width: 350px;
            background-color: rgba(255,255,255,0.09);
            height: 550px;
            border-radius: 50px;
            padding: 30px;
        }

        .my-skills {
            margin-top: 30px;
        }

        .skill {
            margin: 10px 0;
        }

            .skill span {
                display: block;
                margin-bottom: 5px;
                color: #fff;
            }

        .skill-bar {
            height: 10px;
            background-color: #3498db;
            border-radius: 5px;
            transition: width 0.5s ease;
        }
    </style>
</head>
<body>
    <div class="skills-container">
        <div class="my-skills">
            <h2>Yeteneklerim</h2>
            @foreach (var x in Model)
            {
                <div class="skill">
                    <span>@x.yetenekAd</span>
                    <div class="skill-bar" style=" width: @x.yuzde%;"></div>
                </div>
            }
        </div>
    </div>
</body>
</html>
