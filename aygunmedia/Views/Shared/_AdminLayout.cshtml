
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <title> Admin Panel</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 20px;
            }

        .menu {
            list-style: none;
            padding: 0;
        }

            .menu li {
                margin-bottom: 10px;
            }

            .menu a {
                display: flex;
                align-items: center;
                color: white;
                text-decoration: none;
                padding: 12px 20px;
                font-size: 16px;
                border-radius: 5px;
                transition: background 0.3s ease;
            }

                .menu a:hover {
                    background-color: #34495e;
                }

            .menu i {
                width: 24px;
                text-align: center;
                margin-right: 12px;
                font-size: 18px;
            }

        .admin-info {
            text-align: center;
            padding-top: 30px;
            padding-bottom: 15px;
            padding-left: 15px;
            padding-right: 15px;
            border-top: 1px solid #555;
        }

            .admin-info img {
                width: 70px;
                height: 62px;
                margin-bottom: 10px;
            }

            .admin-info p {
                margin: 5px 0;
            }

            .admin-info .time {
                font-size: 14px;
                font-weight: bold;
                color: #f1c40f;
            }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #2c3e50;
            color: white;
            position: fixed;
            left: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding-top: 20px;
            transition: transform 0.3s ease;
        }

        .menu {
            list-style: none;
            padding: 0;
        }

            .menu li {
                margin-bottom: 10px;
            }

            .menu a {
                display: flex;
                align-items: center;
                color: white;
                text-decoration: none;
                padding: 12px 20px;
                font-size: 16px;
                border-radius: 5px;
                transition: background 0.3s ease;
            }

                .menu a:hover {
                    background-color: #34495e;
                }

            .menu i {
                width: 24px;
                text-align: center;
                margin-right: 12px;
                font-size: 18px;
            }

        .admin-info {
            text-align: center;
            padding: 15px;
            border-top: 1px solid #555;
        }

            .admin-info img {
                width: 70px;
                height: 62px;
                margin-bottom: 10px;
            }

            .admin-info .time {
                font-size: 14px;
                font-weight: bold;
                color: #f1c40f;
            }

        .menu-toggle {
            display: none;
            position: absolute;
            top: 20px;
            left: 20px;
            background: #2c3e50;
            border: none;
            color: white;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 18px;
        }

        .close-btn {
            display: none;
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 24px;
            color: white;
            background: none;
            border: none;
            cursor: pointer;
        }

        @@media (max-width: 1024px) {
            .menu-toggle {
                display: block;
            }

            .sidebar {
                transform: translateX(-250px);
            }

                .sidebar.open {
                    transform: translateX(0);
                }

            .close-btn {
                display: block;
            }
        }
    </style>
</head>
<body>
    <button class="menu-toggle" onclick="toggleSidebar()">
        <i class="fa fa-bars"></i>
    </button>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div>
            <button class="close-btn" onclick="toggleSidebar()">&times;</button>
            <h2>Admin Panel</h2>
            <ul class="menu">
                <li><a href="/Admin/Index"><i class="fa-solid fa-house"></i>Ana Sayfa</a></li>
                <li><a href="/Admin/ikonListesi"><i class="fa-solid fa-icons"></i>İkonlar</a></li>
                <li><a href="/Admin/SkillListesi"><i class="fa-solid fa-person"></i>Yetenekler</a></li>
                <li><a href="/Anasayfa/Index" target="_blank"><i class="fa-solid fa-globe"></i>Siteye Git</a></li>
                <li><a href="/Login/LogOut/"><i class="fa-solid fa-sign-out-alt"></i>Çıkış Yap</a></li>
            </ul>
        </div>

        <!-- Admin Bilgileri Kısmı -->
        <div class="admin-info">
            <img src="~/anasayfa-tamplate/falogowhite.png" alt="Admin Foto">
            <p>Hoş geldiniz, <strong>Furkan</strong></p>
            <p class="time" id="datetime"></p>
        </div>
    </div>

    <!-- Page Content -->
    <div style="margin-left:20%">

        <div class="w3-container" style="background-image: linear-gradient(120deg, #3498db, #8e44ad)">
            <h1 style="color:white">İçerik Kontrol</h1>
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>
    </div>
    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("open");
        }
    </script>
    <script>
        function updateDateTime() {
            const now = new Date();
            const days = ["Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi"];
            const day = days[now.getDay()];
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const timeString = `${hours}:${minutes} - ${day}`;
            document.getElementById("datetime").innerText = timeString;
        }

        setInterval(updateDateTime, 1000);
        updateDateTime();
    </script>
</body>
</html>
